{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build main rs",
            "type": "shell",
            "command": "cargo build",
            "group": "build",    
            "options": {
                "cwd": "${workspaceFolder}/rust/wq"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "run main rs",
            "type": "shell",
            "command": "cargo run",
            "group":"none",    
            "options": {
                "cwd": "${workspaceFolder}/rust/wq"
            },
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}